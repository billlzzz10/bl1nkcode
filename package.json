{
  "name": "gemini-phoenix-engine",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm --filter \"./package/**\" run build",
    "dev": "pnpm --filter \"./package/**\" --parallel run dev",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "test": "pnpm --filter \"./package/**\" run test",
    "setup:py": "uv pip install -r package/core/python/requirements.txt",
    "postinstall": "pnpm run setup:py && pnpm run build"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  },
  "packageManager": "pnpm@8.15.6"
}